<%= stylesheet_link_tag "article" %>
<h1 class="title">게시물 등록</h1>
<div class="square-box">
  <form action="/article/create" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group" id="title-div">
      <!--<label for="title">제목</label>-->
      <input type="text" name="title" class="form-control" id="title" placeholder="제목" required>
    </div>
    <div class="form-group" id="place-div">
      <!--<label for="place">장소</label>-->
      <input type="text" name="place" class="form-control" id="place" placeholder="장소" required>
    </div>
    <div class="form-group">
      <!--<label for="content">내용</label>-->
      <input type="text" name="content" class="form-control" id="content" placeholder="내용" required>
    </div>
    <div class="form-group" id="time-div">
      <!--<label for="init_time">시작시간</label>-->
      <input type="datetime" name="init_time" class="form-control" id="init_time" placeholder="시작시간" required>
      <!--<label for="fin_time">종료시간</label>-->
      <input type="datetime" name="fin_time" class="form-control" id="fin_time" placeholder="종료시간" required>
    </div>
  </div>
  <button type="submit" class="btn btn-light">Submit</button>
</form>