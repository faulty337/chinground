<%= stylesheet_link_tag "freechats" %>
<h3 class="title">나의 자유채팅방 현황</h3>

<%= button_to '만들기', "/freechats/new", class:"btn submit", :method => :get %>

<div class="table-area">
    <table class="table table-hover">
        <thead class="thead-light">
            <th scope="col" class="ground_list">번호</th>
            <th scope="col" class="ground_list">채팅방 이름</th>
        </thead>
        <tbody>
            <% @my_freechats.each do |chat| %>
                <tr>
                    <td scope="row"><%= link_to "#{chat.id}", "/freechats/show/#{chat.id}" %></td>
                    <td id="freechat_title"><%= link_to "#{chat.name}", "/freechats/show/#{chat.id}" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>