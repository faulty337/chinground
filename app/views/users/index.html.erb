<%= stylesheet_link_tag "users" %>

<h3>내 친구 목록</h3>

<div class="table-area">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col" class="ground_list">번호</th></th>
        <th scope="col" class="ground_list">email</th>
        <th scope="col" class="ground_list">친구?</th>
        <th scope="col" class="ground_list">follow</th>
        <th scope="col" class="ground_list">프로필 보기</th>
        <!--이것도 추후 수정 필요!!-->
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= current_user.followers.include?(user) ? "YES" : "NO" %></td>
        <% if current_user.followers.include?(user) %>
        <td><%= link_to '친구끊기', "/users/follow/#{user.id}", method: :post %></td>
        <% else %>
        <td><%= link_to '친구되기', "/users/follow/#{user.id}", method: :post %></td>
        <% end %>
        <td><%= link_to '프로필 보기', "/users/show/#{user.id}" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>